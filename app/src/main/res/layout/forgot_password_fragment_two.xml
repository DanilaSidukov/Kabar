<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_dont_worry_email"
        style="@style/TextAppearance.Login_normal_style_anthracite"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/don_t_worry_it_happens_address"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_email_id_or_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_dont_worry_email"
        style="@style/TextAppearance.Login_normal_style_anthracite"
        android:layout_marginTop="16dp"
        android:textColor="?color_anthracite"
        android:textSize="14sp"
        android:text="@string/email_id_mobile_number"
        android:layout_marginStart="24dp"/>

    <EditText
        android:id="@+id/password_forgot_edit_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_email_id_or_number"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/edit_text_rounded"
        android:layout_marginTop="4dp" />





</androidx.constraintlayout.widget.ConstraintLayout>